<body>
  {{#unless splash}}
  <header class="clearfix">
    <a href="{{backLink}}" class="pull-left btn btn-default">Back</a>
    <button name="logout" class="pull-right btn btn-default" type="button">logout</button>
    <h1 class="brand header-text">Freedom Beacon</h1>
    <div class="user-time group-end"><input type="number" max="60" min="1" value="{{userTime}}" name="header-timer"></div>
  </header>
  {{/unless}}
  
  <main role="main" class="container">
    {{{body}}}
  </main>
  
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
