<h2>Free friends</h2>
<table class="friends">
    {{#each freeFriends}}
    <tr>
        <td><a href="#" class="message-link" data-username="{{username}}">{{name}}</a></td>
        {{#with distance}}
        <td>
            <a class="distance-link" href="#">{{name}} distance</a>
            <div class="flyout distance-flyout">
                <button name="close-btn" type="button"><span class="glyphicon glyphicon-remove"></span> close</button>
                {{description}}
            </div>
        </td>
        {{/with}}
        <td>{{time}} min left</td>
    </tr>
    {{/each}}
</table>