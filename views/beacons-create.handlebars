<header>
  <h1 class="header-text">Freedom Beacon</h1>
  <button name="logout" class="btn btn-default btn-xs" type="button">logout</button>
</header>

<main role="main" class="container">
  <form class="group-end" action="/beacons" method="post">
      <label class="timer-label group-end">
          I am free for
          <input type="number" max="60" min="1" value="30" name="main-timer" autofocus>
          minutes
      </label>
      <button type="submit" class="btn btn-primary btn-lg beacon-btn">Illuminate Beacon</button>
  </form>
  <input type="hidden" name="userFbId" value="_{{fbId}}">
  <div class="friends"></div>
</main>