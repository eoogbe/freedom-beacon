<label class="user-time-label group-end">
    I am free for
    <input type="number" max="60" min="1" value="30" name="user-time" autofocus>
    minutes
</label>
<input type="checkbox" id="beacon">
<label for="beacon" class="btn btn-primary btn-lg beacon-btn group-end">illuminate beacon</label>

<h2>Friends who've pinged you</h2>
<ul class="friends list-unstyled">
    {{#each pingingFriends}}
    <li class="pinging">
        <a class="row" href="/conversations/{{id}}">
            <span class="col-xs-6">{{name}}</span>
            <span class="col-xs-6">{{distance}} distance</span>
        </a>
    </li>
    {{/each}}
</ul>

<div><a href="/friends">View more friends</a></div>